rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload and read their own attachments
    match /attachments/{userEmail}/{taskId}/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow write (upload) if user is authenticated
      // Note: userEmail in path is sanitized (dots and @ replaced with underscores)
      // so we just verify user is authenticated, not exact email match
      allow write: if request.auth != null 
                   && request.auth.token.email != null
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB
      
      // Allow delete if user is authenticated
      allow delete: if request.auth != null;
    }
    
    // Default: deny all access to other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
