<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Permissions for notifications and alarms -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Permission for phone calls -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Permissions for file access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Permissions for camera, video, and audio -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Hardware features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    
    <!-- Indicate that telephony hardware is not required -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:name=".TodoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList"
        tools:targetApi="31">        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ToDoList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskDetailActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FocusActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".TaskDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CategoryManagerActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />        
        <activity
            android:name=".SearchActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CompletedTasksActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CalendarActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SyncAccountActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".activities.ProfileActivity" />
        <activity
            android:name=".ThemeSelectionActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/Theme.ToDoList"
            android:parentActivityName=".MainActivity" />

        <!-- Notification receivers -->
        <receiver
            android:name=".notification.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Boot receiver to reschedule alarms after reboot -->
        <receiver
            android:name=".notification.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Calendar Widget -->
        <receiver
            android:name=".widget.CalendarWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.todolist.widget.PREV_MONTH" />
                <action android:name="com.example.todolist.widget.NEXT_MONTH" />
                <action android:name="com.example.todolist.widget.DAY_CLICK" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_widget_info" />
        </receiver>

        <!-- Mini Widget -->
        <receiver
            android:name=".widget.MiniWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.todolist.widget.QUICK_ADD" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/mini_widget_info" />
        </receiver>

        <!-- Calendar Task Widget 4x2 -->
        <receiver
            android:name=".widget.CalendarTaskWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.todolist.DAY_CLICK" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_task_widget_4x2_info" />
        </receiver>

        <!-- Calendar Task Widget Service -->
        <service
            android:name=".widget.CalendarTaskWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <!-- Countdown Widget -->
        <receiver
            android:name=".widget.CountdownWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/countdown_widget_info" />
        </receiver>

        <!-- Countdown Widget Config Activity -->
        <activity
            android:name=".widget.CountdownWidgetConfigActivity"
            android:theme="@style/Theme.ToDoList"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- File Provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.todolist.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>