<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp"
    android:id="@+id/dialog_content">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_utilities"
            app:tint="#4285F4"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widgets_dialog_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="#999999" />

    </LinearLayout>

    <!-- Widget Preview Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widgets_dialog_description"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="2dp" />

    <!-- Widget Grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar Widget -->
            <LinearLayout
                android:id="@+id/widget_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_preview_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_widget_title"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginBottom="8dp" />

                <!-- Mini calendar widget preview -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/mini_widget_background"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/month_year_format"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <!-- Mini calendar grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mon_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tue_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wed_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/thu_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fri_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sat_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sun_short"
                            android:textSize="6sp"
                            android:textColor="#999999"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="26"
                            android:textSize="6sp"
                            android:textColor="#CCCCCC"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="27"
                            android:textSize="6sp"
                            android:textColor="#CCCCCC"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="28"
                            android:textSize="6sp"
                            android:textColor="#CCCCCC"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="29"
                            android:textSize="6sp"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:background="@drawable/mini_calendar_today" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="30"
                            android:textSize="6sp"
                            android:textColor="#333333"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:textSize="6sp"
                            android:textColor="#333333"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2"
                            android:textSize="6sp"
                            android:textColor="#333333"
                            android:gravity="center" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/tasks_today_count"
                        android:textSize="6sp"
                        android:textColor="#4285F4"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_widget_description"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Countdown Widget -->
            <LinearLayout
                android:id="@+id/widget_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_preview_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích đếm ngược 4x1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginBottom="8dp" />

                <!-- Countdown widget preview -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/widget_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_event_birthday"
                        android:background="@drawable/circle_background"
                        android:padding="4dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mom's Birthday"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2021/08/15"
                            android:textSize="6sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/circle_background_light"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#00D4AA" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D"
                            android:textSize="6sp"
                            android:textColor="#00D4AA" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích đếm ngược sự kiện quan trọng với nhiều biểu tượng"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Quick Add Widget -->
            <LinearLayout
                android:id="@+id/widget_quick_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_preview_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mini_widget_title"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginBottom="8dp" />

                <!-- Mini quick add widget preview -->
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/mini_widget_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_add"
                        app:tint="#4285F4"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_button"
                        android:textSize="5sp"
                        android:textColor="#4285F4"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mini_widget_description"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Instructions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/info_background"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_info"
            app:tint="#2196F3"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_instructions"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>
