<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header_gradient"
            android:padding="24dp">

            <!-- Close Button -->
            <ImageView
                android:id="@+id/btn_close_terms"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:contentDescription="Đóng" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/icon_terms"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/btn_close_terms"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_description"
                android:tint="#FFFFFF" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_terms"
                android:layout_marginTop="12dp"
                android:text="Điều khoản dịch vụ"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>

        <!-- Content with ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Introduction -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bằng việc sử dụng ứng dụng ToDoList, bạn đồng ý với các điều khoản sau:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="20dp" />

                <!-- Term 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_action_button_primary"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_privacy_section"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sử dụng hợp pháp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn đồng ý sử dụng ứng dụng cho mục đích cá nhân và không vi phạm pháp luật"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Term 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_action_button_primary"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_privacy_section"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trách nhiệm người dùng"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn có trách nhiệm sao lưu dữ liệu của mình thường xuyên"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Term 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_action_button_primary"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_privacy_section"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới hạn trách nhiệm"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà phát triển không chịu trách nhiệm cho dữ liệu bị mất hoặc hư hỏng"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Term 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_action_button_primary"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_privacy_section"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thay đổi điều khoản"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chúng tôi có quyền thay đổi điều khoản bất cứ lúc nào. Việc tiếp tục sử dụng đồng nghĩa với việc chấp nhận thay đổi"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Button -->
                <TextView
                    android:id="@+id/btn_agree_terms"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Tôi đồng ý"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/bg_action_button_primary"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
