<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/text_task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đi ngủ sớm"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Category Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="không có thể loại"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@drawable/category_background"
            android:padding="8dp"
            android:layout_marginBottom="32dp"/>

        <!-- Sleep Icon with Moon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_sleep_moon"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Một giấc ngủ đều đặn có thể khuyến khích cơ thể bạn\nhọc hỏi những gì sắp xây ra vào ngày hôm sau và\nchuẩn bị cho bạn thần một cách thích hợp."
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Reminder From Memory Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cụm từ nhắc nhở"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/text_reminder_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúc ngủ ngon, đã đến giờ đi ngủ"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/reminder_text_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Repeat Schedule Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lặp lại vào"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Day Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/day_cn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="CN"
                android:textSize="14sp"
                android:textColor="#999999"
                android:gravity="center"
                android:background="@drawable/day_selector"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 2"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/day_selected"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 3"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/day_selected"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 4"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/day_selected"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 5"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/day_selected"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 6"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/day_selected"
                android:layout_marginEnd="8dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/day_t7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Th 7"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center"
                android:background="@drawable/day_selector"
                android:clickable="true"/>

        </LinearLayout>

        <!-- Reminder Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhắc nhở lúc"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <TextView
                android:id="@+id/text_reminder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"
                android:textSize="24sp"
                android:textColor="#333333"
                android:background="@drawable/time_background"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/add_time_background"
                android:padding="4dp"
                android:clickable="true"/>

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lưu"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
