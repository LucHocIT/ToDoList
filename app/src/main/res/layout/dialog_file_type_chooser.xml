<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#CCCCCC"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn loại tệp tin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Grid layout for file type options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1: Ảnh và Video -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/btn_choose_image"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/file_type_button_background"
                android:clickable="true"
                android:layout_marginEnd="6dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_person"
                    app:tint="#4CAF50"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_choose_video"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/file_type_button_background"
                android:clickable="true"
                android:layout_marginStart="6dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_music_note"
                    app:tint="#2196F3"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Row 2: Ghi âm và Các tệp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_record_audio"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/file_type_button_background"
                android:clickable="true"
                android:layout_marginEnd="6dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_volume_up"
                    app:tint="#F44336"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi âm"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_choose_file"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/file_type_button_background"
                android:clickable="true"
                android:layout_marginStart="6dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_attachment"
                    app:tint="#9C27B0"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các tệp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
