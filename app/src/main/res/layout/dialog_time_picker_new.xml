<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt thời gian"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Time Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/circle_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_minute"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="07"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/text_gray"
                android:gravity="center"
                android:background="@drawable/circle_background_gray" />

        </LinearLayout>

        <!-- Quick Time Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_no_time"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Không có thời gian"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_07_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="07:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_09_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="09:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_10_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="10:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_12_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="12:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_14_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="14:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btn_16_00"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="16:00"
                android:textSize="12sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_gray"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_18_00"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="18:00"
            android:textSize="12sp"
            android:background="@drawable/button_outline"
            android:textColor="@color/text_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="HỦY"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:background="@android:color/transparent"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_confirm_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="XONG"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:background="@android:color/transparent"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
