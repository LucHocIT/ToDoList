<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <!-- Checkbox Circle - Tăng size lên 1/4 -->
    <TextView
        android:id="@+id/widget_week_task_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="○"
        android:textSize="25sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginEnd="12dp" />

    <!-- Task Title - Tăng size lên 1/4 -->
    <TextView
        android:id="@+id/widget_week_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Task Title"
        android:textSize="17.5sp"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Star Icon for Important Task -->
    <TextView
        android:id="@+id/widget_week_task_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        android:visibility="gone" />

    <!-- Task Time -->
    <TextView
        android:id="@+id/widget_week_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_marginStart="8dp"
        android:visibility="gone" />

</LinearLayout>
