<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Calendar Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btn_prev_month_repeat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_month_year_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THÁNG 6  2025"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btn_next_month_repeat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <!-- Calendar Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:layout_marginBottom="16dp">

        <!-- Days of week header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="CN"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 2"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 3"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 4"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 5"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 6"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 7"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </GridLayout>

    <!-- Calendar Days Container -->
    <GridLayout
        android:id="@+id/calendar_days_container_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:layout_marginBottom="16dp"/>

    <!-- Repeat Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt làm tác vụ lặp lại"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Switch
                android:id="@+id/switch_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:thumbTint="#4285F4"
                android:trackTint="#E0E0E0"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt làm tác vụ lặp lại"
                android:textSize="14sp"
                android:textColor="#333333"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Repeat Frequency Options -->
    <LinearLayout
        android:id="@+id/layout_repeat_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_repeat_hourly"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Giờ"
                android:textSize="12sp"
                android:textColor="#666666"
                android:backgroundTint="#F5F5F5"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_repeat_daily"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="hàng ngày"
                android:textSize="12sp"
                android:textColor="#666666"
                android:backgroundTint="#F5F5F5"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_repeat_weekly"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Hàng tuần"
                android:textSize="12sp"
                android:textColor="#666666"
                android:backgroundTint="#F5F5F5"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_repeat_monthly"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Hàng tháng"
                android:textSize="12sp"
                android:textColor="#666666"
                android:backgroundTint="#F5F5F5"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_cancel_repeat"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="HỦY"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btn_done_repeat"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="XONG"
            android:textSize="14sp"
            android:textColor="#4285F4"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>
