<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header_gradient"
            android:padding="24dp">

            <!-- Close Button -->
            <ImageView
                android:id="@+id/btn_close_privacy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:contentDescription="Đóng" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/icon_privacy"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/btn_close_privacy"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_privacy"
                android:tint="#FFFFFF" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_privacy"
                android:layout_marginTop="12dp"
                android:text="Chính sách quyền riêng tư"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>

        <!-- Content with ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Introduction -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chúng tôi cam kết bảo vệ quyền riêng tư của bạn và đảm bảo dữ liệu của bạn luôn an toàn."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="20dp" />

                <!-- Privacy Point 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_privacy_section"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_phone_android"
                        android:tint="#667eea"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lưu trữ cục bộ"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dữ liệu được lưu trữ hoàn toàn trên thiết bị của bạn, không upload lên server"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Privacy Point 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_privacy_section"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_lock"
                        android:tint="#667eea"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không thu thập thông tin"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chúng tôi không thu thập bất kỳ thông tin cá nhân nào của bạn"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Privacy Point 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_privacy_section"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_share"
                        android:tint="#667eea"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không chia sẻ dữ liệu"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dữ liệu của bạn không bao giờ được chia sẻ với bên thứ ba"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Privacy Point 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_privacy_section"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="#667eea"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quyền tối thiểu"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉ yêu cầu các quyền cần thiết cho hoạt động của ứng dụng"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Button -->
                <TextView
                    android:id="@+id/btn_understand_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Tôi đã hiểu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/bg_action_button_primary"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
