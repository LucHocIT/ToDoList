<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Calendar Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btn_prev_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THÁNG 6  2025"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <!-- Calendar Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:layout_marginBottom="16dp">

        <!-- Days of week header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="CN"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 2"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 3"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 4"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 5"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 6"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_columnWeight="1"
            android:text="Th 7"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </GridLayout>

    <!-- Calendar Days Container -->
    <GridLayout
        android:id="@+id/calendar_days_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:layout_marginBottom="16dp"/>

    <!-- Quick Select Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no_due_date"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Không hẹn hò"
            android:textSize="12sp"
            android:textColor="#666666"
            android:backgroundTint="#F5F5F5"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_today"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Hôm nay"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4285F4"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tomorrow"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Ngày mai"
            android:textSize="12sp"
            android:textColor="#666666"
            android:backgroundTint="#F5F5F5"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_three_days"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="3 ngày sau"
            android:textSize="12sp"
            android:textColor="#666666"
            android:backgroundTint="#F5F5F5"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_this_sunday"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Chủ nhật này"
        android:textSize="12sp"
        android:textColor="#666666"
        android:backgroundTint="#F5F5F5"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <!-- Additional Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">        <!-- Time Option -->
        <LinearLayout
            android:id="@+id/layout_time_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_time"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời gian"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

        <!-- Reminder Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_notification"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lời nhắc"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>        <!-- Repeat Option -->
        <LinearLayout
            android:id="@+id/layout_repeat_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_repeat"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lặp lại"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_repeat_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_cancel_calendar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="HỦY"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btn_done_calendar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="XONG"
            android:textSize="14sp"
            android:textColor="#4285F4"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>
