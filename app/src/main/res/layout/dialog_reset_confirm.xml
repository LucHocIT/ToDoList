<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Warning Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_warning"
            android:tint="#FF5722" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Xác nhận Reset"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

        <!-- Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc chắn muốn xóa TẤT CẢ dữ liệu và khôi phục về cài đặt mặc định?\n\nHành động này KHÔNG THỂ hoàn tác!"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.3" />

        <!-- Warning List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠ Dữ liệu sẽ bị xóa:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#E65100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Tất cả công việc\n• Tất cả danh mục\n• Tất cả cài đặt cá nhân"
                android:textSize="12sp"
                android:textColor="#E65100"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.4" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_cancel_reset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_confirm_reset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/bg_button_danger"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
