<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <!-- Header with month/year and navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_background"
        android:padding="12dp">

        <ImageView
            android:id="@+id/widget_btn_prev_month"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="@drawable/widget_nav_button_background"
            android:padding="6dp"
            android:contentDescription="Previous Month" />

        <TextView
            android:id="@+id/widget_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ThÃ¡ng 6 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/widget_btn_next_month"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_forward_white"
            android:background="@drawable/widget_nav_button_background"
            android:padding="6dp"
            android:contentDescription="Next Month" />

    </LinearLayout>

    <!-- Content area with background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/widget_content_background">

        <!-- Days of week header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="CN"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T2"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T3"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T4"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T5"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T6"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="T7"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Calendar grid -->
        <LinearLayout
            android:id="@+id/widget_calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Footer with app name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… To-Do Calendar"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:paddingTop="8dp"
            android:paddingBottom="12dp" />

    </LinearLayout>

</LinearLayout>
