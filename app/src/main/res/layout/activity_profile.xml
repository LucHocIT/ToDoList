<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <!-- Main Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header with Avatar and Countdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <!-- User Avatar -->
                        <ImageView
                            android:id="@+id/img_user_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_background"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="User Avatar" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <!-- User Name -->
                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chào Anh Hà"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                            <!-- User Status -->
                            <TextView
                                android:id="@+id/tv_user_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bạn đã giữ theo kế hoạch của mình trong 157 ngày!"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Task Statistics Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tổng quan về Nhiệm vụ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Statistics Cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <!-- Completed Tasks Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E3F2FD">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_completed_tasks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="34"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nhiệm vụ đã hoàn thành"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Pending Tasks Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E3F2FD">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_pending_tasks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="36sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="nhiệm vụ chưa hoàn thành"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Daily Completion Chart -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Hoàn thành nhiệm vụ hằng ngày"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/btn_prev_week"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_arrow_left"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Previous Week" />

                                    <TextView
                                        android:id="@+id/tv_week_range"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="8/31-9/6"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp" />

                                    <ImageView
                                        android:id="@+id/btn_next_week"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_arrow_right"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Next Week" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Chart with Y-axis -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:orientation="horizontal">
                                
                                <!-- Y-axis labels -->
                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="120dp"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="8"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:gravity="center" />
                                        
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="6"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:gravity="center" />
                                        
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="4"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:gravity="center" />
                                        
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="2"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:gravity="center" />
                                        
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="0"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:gravity="center" />
                                        
                                </LinearLayout>

                                <!-- Chart bars -->
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1">
                                    
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        
                                        <!-- Chart area with bars -->
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:gravity="bottom"
                                            android:weightSum="7">

                                <!-- Sunday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_sunday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CN"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Monday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_monday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 2"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Tuesday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_tuesday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 3"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Wednesday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_wednesday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 4"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Thursday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_thursday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 5"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Friday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_friday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 6"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>

                                <!-- Saturday -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    
                                    <View
                                        android:id="@+id/chart_bar_saturday"
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        android:background="#5C9CFF"
                                        android:layout_gravity="center" />
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Th 7"
                                        android:textSize="10sp"
                                        android:textColor="#666666"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp" />
                                </LinearLayout>
                                
                                </LinearLayout> <!-- End chart bars container -->
                                
                                <!-- Horizontal axis line -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#E0E0E0"
                                    android:layout_marginTop="4dp" />
                                
                                </LinearLayout> <!-- End chart bars area -->
                                
                                <!-- No Data Message (centered in chart area) -->
                                <TextView
                                    android:id="@+id/tv_no_chart_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Không có dữ liệu nhiệm vụ"
                                    android:textSize="14sp"
                                    android:textColor="#999999"
                                    android:visibility="gone" />
                                
                                </FrameLayout> <!-- End chart area with bars and no data message -->
                                
                            </LinearLayout> <!-- End chart with Y-axis -->

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Incomplete Tasks by Category Section -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Phân loại nhiệm vụ chưa hoàn thành"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <!-- Filter Dropdown -->
                                <LinearLayout
                                    android:id="@+id/filter_dropdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="8dp">

                                    <TextView
                                        android:id="@+id/tv_filter_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tất cả"
                                        android:textSize="14sp"
                                        android:textColor="#666666" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_arrow_drop_down"
                                        android:layout_marginStart="4dp"
                                        android:contentDescription="Dropdown Arrow" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Pie Chart Container -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginBottom="16dp">

                                <!-- Simple Pie Chart Representation -->
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_pie_chart"
                                    android:contentDescription="Pie Chart" />

                            </FrameLayout>

                            <!-- Legend -->
                            <LinearLayout
                                android:id="@+id/legend_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Legend items will be added dynamically -->

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

            <!-- Bottom Navigation -->
            <include layout="@layout/bottom_navigation" />

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Drawer -->
    <include
        layout="@layout/nav_drawer_layout"
        android:layout_width="280dp"
        android:layout_height="match_parent" 
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>
