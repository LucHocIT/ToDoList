<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingStart="40dp"
    android:paddingEnd="16dp">

    <!-- Task Item -->
    <LinearLayout
        android:id="@+id/task_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/completed_task_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:clickable="true">

        <!-- Completed Checkbox -->
        <ImageView
            android:id="@+id/checkbox_complete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            app:tint="#4CAF50"
            android:layout_marginEnd="12dp"/>

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="15sp"
                android:textColor="#888888"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/text_task_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="06-25 16:40"
                android:textSize="12sp"
                android:textColor="#AAAAAA"
                android:visibility="visible"/>

        </LinearLayout>

        <!-- Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_notification"
                app:tint="#CCCCCC"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_repeat"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_repeat"
                app:tint="#CCCCCC"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_star"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star"
                app:tint="#FFD700"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
