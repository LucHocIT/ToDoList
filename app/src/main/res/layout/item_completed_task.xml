<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp"
    android:paddingStart="40dp"
    android:paddingEnd="16dp">

    <!-- Task Item Background -->
    <LinearLayout
        android:id="@+id/task_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- Completed Checkbox -->
        <ImageView
            android:id="@+id/checkbox_complete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="#4CAF50"
            android:layout_marginEnd="16dp"/>

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="15sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_schedule"
                    app:tint="#9E9E9E"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/text_task_datetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025-08 KhÃ´ng"
                    android:textSize="13sp"
                    android:textColor="#757575"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Icons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_notification"
                app:tint="#BDBDBD"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_repeat"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_repeat"
                app:tint="#BDBDBD"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_notes"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_note"
                app:tint="#BDBDBD"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_attachment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_attachment"
                app:tint="#BDBDBD"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_subtask"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_subtask"
                app:tint="#BDBDBD"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_star"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star"
                app:tint="#FFB74D"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
