<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header với nút back và title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiện ích con đếm ngược"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="start"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Container cho 2 màn hình -->
    
    <!-- Màn hình 1: Giao diện chính -->
    <LinearLayout
        android:id="@+id/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="visible">

        <!-- Biểu tượng lịch ở giữa -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/selectedIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lich"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biểu tượng sự kiện"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <!-- Form nhập liệu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sự kiện"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_event_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nhập tại đây..."
                android:textSize="14sp"
                android:background="@drawable/edit_text_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="8dp"
                android:maxLength="30" />

            <TextView
                android:id="@+id/characterCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/30"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="end"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại tính toán"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_calculation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="105dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="2025/08/27"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical|end"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Spacer để đẩy nút xuống dưới -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Nút Lưu -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="LƯU"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/save_button_background" />

    </LinearLayout>

    <!-- Màn hình 2: Chọn biểu tượng -->
    <LinearLayout
        android:id="@+id/iconSelectionScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <!-- Biểu tượng được chọn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background">

                <ImageView
                    android:id="@+id/previewIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lich"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biểu tượng sự kiện"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <!-- Grid chọn biểu tượng -->
        <GridView
            android:id="@+id/grid_view_icons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:numColumns="4"
            android:horizontalSpacing="16dp"
            android:verticalSpacing="16dp"
            android:stretchMode="columnWidth"
            android:gravity="center" />

        <!-- Spacer để đẩy nút xuống dưới -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Nút Lưu -->
        <Button
            android:id="@+id/btn_save_icon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="LƯU"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/save_button_background" />

    </LinearLayout>

</RelativeLayout>
