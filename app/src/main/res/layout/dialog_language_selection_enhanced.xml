<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header_gradient"
            android:padding="24dp">

            <!-- Close Button -->
            <ImageView
                android:id="@+id/btn_close_language"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:contentDescription="Đóng" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/icon_language"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/btn_close_language"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_language"
                android:tint="#FFFFFF" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_language"
                android:layout_marginTop="12dp"
                android:text="Chọn ngôn ngữ"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ngôn ngữ bạn muốn sử dụng cho ứng dụng"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="20dp" />

            <!-- Vietnamese Option -->
            <LinearLayout
                android:id="@+id/language_option_vi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_language_item"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <!-- Flag Icon (you can replace with actual flag) -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="🇻🇳"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/bg_privacy_section"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiếng Việt"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vietnamese"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Radio Button -->
                <ImageView
                    android:id="@+id/radio_vi"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_button_unchecked"
                    android:tint="#667eea" />

            </LinearLayout>

            <!-- English Option -->
            <LinearLayout
                android:id="@+id/language_option_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_language_item"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <!-- Flag Icon -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="🇺🇸"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/bg_privacy_section"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiếng Anh"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Radio Button -->
                <ImageView
                    android:id="@+id/radio_en"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_button_unchecked"
                    android:tint="#667eea" />

            </LinearLayout>

            <!-- Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF9E6"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:tint="#F57C00"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ứng dụng sẽ khởi động lại để áp dụng ngôn ngữ mới"
                    android:textSize="12sp"
                    android:textColor="#E65100"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_cancel_language"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Hủy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#667eea"
                    android:gravity="center"
                    android:background="@drawable/bg_action_button_secondary"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_apply_language"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Áp dụng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/bg_action_button_primary"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
