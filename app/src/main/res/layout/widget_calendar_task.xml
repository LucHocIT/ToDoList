<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <!-- Left side: Calendar (2x2) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/widget_content_background">

        <!-- Calendar Header with month/year and navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/widget_header_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/widget_btn_prev_month"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back_white"
                android:background="@drawable/widget_nav_button_background"
                android:padding="4dp"
                android:contentDescription="Previous Month" />

            <TextView
                android:id="@+id/widget_month_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tháng 8 2025"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/widget_btn_next_month"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward_white"
                android:background="@drawable/widget_nav_button_background"
                android:padding="4dp"
                android:contentDescription="Next Month" />

        </LinearLayout>

        <!-- Days of week header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="CN"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T2"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T3"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T4"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T5"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T6"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="T7"
                android:textSize="9sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Calendar grid -->
        <LinearLayout
            android:id="@+id/widget_calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp" />

    </LinearLayout>

    <!-- Vertical divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Right side: Tasks for selected date (2x2) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/widget_content_background"
        android:padding="8dp">

        <!-- Task header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/widget_selected_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20 Tháng 8"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/widget_task_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 việc"
                android:textSize="10sp"
                android:textColor="#666666"
                android:background="@drawable/mini_widget_count_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Task list -->
        <ListView
            android:id="@+id/widget_task_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#E8E8E8"
            android:dividerHeight="1dp"
            android:scrollbars="none" />

        <!-- Empty view for when no tasks are available -->
        <TextView
            android:id="@+id/widget_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có việc cần làm"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Add task button -->
        <LinearLayout
            android:id="@+id/widget_add_task_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/mini_widget_button_background"
            android:padding="6dp"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_add"
                android:tint="#4CAF50"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm việc"
                android:textSize="10sp"
                android:textColor="#4CAF50"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
