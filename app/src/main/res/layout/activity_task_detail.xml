<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button and menu only -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/btn_back_detail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btn_menu_options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"/>

        </LinearLayout>

        <!-- Content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingTop="8dp">

            <!-- Compact Category Dropdown -->
            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_gravity="start"
                android:background="@drawable/spinner_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Task Title -->
            <EditText
                android:id="@+id/edit_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_title_hint"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:textColorHint="#9E9E9E"
                android:background="@null"
                android:padding="0dp"
                android:layout_marginBottom="24dp"/>

            <!-- SubTasks RecyclerView (no header, no timeline) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_subtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" 
                android:layout_marginBottom="8dp"/>

            <!-- Add Subtask Button -->
            <LinearLayout
                android:id="@+id/btn_add_subtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="8dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginEnd="8dp"
                    app:tint="#4285F4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm nhiệm vụ phụ"
                    android:textSize="16sp"
                    android:textColor="#4285F4"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Timeline sections start here -->
        
        <!-- Due Date Section -->
        <LinearLayout
            android:id="@+id/layout_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#666666"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày đến hạn"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/text_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025/07/06"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>

        </LinearLayout>

        <!-- Time & Reminder Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#666666"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian &amp; Lời nhắc"
                    android:textSize="16sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhắc nhở lúc"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:30"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"/>

                <TextView
                    android:id="@+id/text_reminder_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:25"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Notification Type Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loại lời nhắc"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>

        </LinearLayout>

        <!-- Repeat Task Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_repeat"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#666666"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lặp lại nhiệm vụ"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/text_repeat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>

        </LinearLayout>

        <!-- Priority Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_priority"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#666666"/>

            <TextView
                android:id="@+id/text_priority_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Độ ưu tiên"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/text_priority_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thấp"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>

        </LinearLayout>

        <!-- Notes Section -->
        <LinearLayout
            android:id="@+id/layout_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_note"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#666666"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ghi chú"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:textSize="14sp"
                android:textColor="#4285F4"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Description EditText in Notes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thêm mô tả..."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#9E9E9E"
                android:background="@null"
                android:padding="0dp"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginStart="40dp"/>

        </LinearLayout>

        <!-- Attachments Section -->
        <LinearLayout
            android:id="@+id/layout_attachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_attachment"
                    android:layout_marginEnd="16dp"
                    app:tint="#666666"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tệp tin đính kèm"
                    android:textSize="16sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÊM"
                    android:textSize="14sp"
                    android:textColor="#4285F4"
                    android:textStyle="bold"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>
