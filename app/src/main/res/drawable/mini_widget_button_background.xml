<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF40" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#FFFFFF80" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF30" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#FFFFFF60" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF20" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#FFFFFF40" />
        </shape>
    </item>
    
</selector>
