<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer most glow (lightest) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20E3F2FD"/>
            <size 
                android:width="70dp"
                android:height="70dp"/>
        </shape>
    </item>
    
    <!-- Second glow layer -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#35E3F2FD"/>
            <size 
                android:width="64dp"
                android:height="64dp"/>
        </shape>
    </item>
    
    <!-- Third glow layer (more solid) -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#50E3F2FD"/>
            <size 
                android:width="58dp"
                android:height="58dp"/>
        </shape>
    </item>
    
    <!-- Fourth glow layer (brightest before button) -->
    <item
        android:left="9dp"
        android:top="9dp"
        android:right="9dp"
        android:bottom="9dp">
        <shape android:shape="oval">
            <solid android:color="#70BBDEFB"/>
            <size 
                android:width="52dp"
                android:height="52dp"/>
        </shape>
    </item>
    
    <!-- Main button background with subtle gradient effect -->
    <item
        android:left="11dp"
        android:top="11dp"
        android:right="11dp"
        android:bottom="11dp">
        <shape android:shape="oval">
            <solid android:color="#64A5F7"/>
            <size 
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
    
</layer-list>
